{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "outDir": "./dist/",
        "lib": [
            "es2016",
            "dom"
        ],
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "resolveJsonModule": true,
        "esModuleInterop": true  
    },
    "include": [ "./src/**/*.ts" ],
    "typeAcquisition": { "enable": true }
}